<!DOCTYPE html>

<html>

  <head>

    <title>ALEF</title>

  </head>

  <body>

    <h1>Welcome to ALEF</h1>

    <p>Find and buy unique digital assets.</p>

    <form>

      <input type="text" placeholder="Search NFTs" id="search-input">

      <button type="button" onclick="searchNFTs()">Search</button>

    </form>

    <h2>Featured NFTs</h2>

    <ul id="featured-nfts">

    </ul>


    <script>

      function searchNFTs() {

        const searchInput = document.getElementById('search-input').value;

        fetch(`http://localhost:5000/search-nfts?q=${searchInput}`)

          .then(response => response.json())

          .then(data => {

            const featuredNFTs = document.getElementById('featured-nfts');

            featuredNFTs.innerHTML = '';

            data.forEach(nft => {

              const li = document.createElement('li');

              li.innerHTML = `

                <h3>${nft.title}</h3>

                <img src="${nft.image}" alt="${nft.title}">

                <p>${nft.description}</p>

                <p>Price: ${nft.price} ${nft.symbol}</p>

                <button onclick="buyNFT(${nft.id})">Buy Now</button>

              `;

              featuredNFTs.appendChild(li);

            });

          })

          .catch(error => console.error(error));

      }


      function buyNFT(nftId) {

        fetch(`http://localhost:5000/buy-nft/${nftId}`)

          .then(response => response.json())

          .then(data => {

            // Redirect to payment page

            window.location.href = `/payment?amount=${data.price}&symbol=${data.symbol}&nft_id=${data.id}`;

          })

          .catch(error => console.error(error));

      }

    </script>

  </body>

</html>



    

      



